# .env.example
# This file contains example environment variables. Copy its content to a new file named .env and update the values accordingly.

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase

# JWT
JWT_SECRET_KEY=supersecretkeythatshouldbeproductionready
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Email (SendGrid Example)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USERNAME=apikey
EMAIL_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@example.com

# SMS (Twilio Example)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Redis
REDIS_URL=redis://localhost:6379/0

# Selcom Pay
SELCOM_VENDOR_ID=your-selcom-vendor-id
SELCOM_API_KEY=your-selcom-api-key
